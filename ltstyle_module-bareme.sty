\newcommand*\FranPt[1]{%
   \ifBaremeDetail
     \num{#1} pt%
     \ifdim#1pt<2pt % singulier lorsque < 2 et pas pluriel lorsque > 1
     \else
       s%
     \fi
   \fi
}

