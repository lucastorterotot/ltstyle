\newcommand{\circuitmeter}[2]{
\draw [thick, black,fill=white] (#1) circle (0.4cm);
      \draw (#1) node {\textbf{#2}};
}
\newcommand{\amperemeter}[2][A]{
    \circuitmeter{#2}{#1}
}
\newcommand{\voltmeter}[2][V]{
    \circuitmeter{#2}{#1}
}
\newcommand{\ohmmeter}[2][{\boldmath$\Omega$}]{
    \circuitmeter{#2}{#1}
}

