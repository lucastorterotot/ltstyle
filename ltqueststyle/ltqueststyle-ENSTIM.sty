\renewcommand{\exo}[2][]{
    \ExoBaremeMake
    \par
    \setcounter{exo}{\thesection}\refstepcounter{section} \refstepcounter{exo}
    \noindent
    \begin{center}
        \fbox{\begin{minipage}{.95\linewidth}
            \centering
            \Large\bf
            \MakeUppercase{#2}
        \end{minipage}}
    \ExoBaremeWrite
    \end{center}
    \par
}
\renewcommand{\subexo}[2][Partie]{\setcounter{subexo}{\arabic{subsection}}\refstepcounter{subsection}\refstepcounter{subexo} \section*{#1 \thesubexo: #2}}
\renewcommand{\subsubexo}[2][Partie]{\setcounter{subsubexo}{\arabic{subsubsection}}\refstepcounter{subsubsection}\refstepcounter{subsubexo} \subsubsection*{#1 \thesubsubexo: #2}}

